<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link href="/assets/styles/styles.css" rel="stylesheet">
</head>
<body class="chat">

    <div class="chat__sidebar">
        <h3>Amigos</h3>
        <div id="users"></div>
    </div>

    <div class="chat__main">
        <ol id="chat" class="chat__messages"></ol>
        <div id="typing" class="chat__typing" ></div>
        <div class="chat__footer">
            <form id="name">
                <input name="name" type="text" placeholder="Name" autofocus autocomplete="off"/>
                <button>Update</button>
            </form>
            <form id="message-form">
                <input name="message" type="text" placeholder="Message" autofocus autocomplete="off"/>
                <button>Send</button>
            </form>
            <button id="send-location">Send location</button>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
    <script src="/assets/static/jquery.js"></script>
    <script src="/assets/static/moment.js"></script>
    <script src="/assets/scripts/main.min.js"></script>
</body>
</html>
